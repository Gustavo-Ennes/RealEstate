{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Real Estate test with debugger",
            "type": "process",
            "isBackground": true,
            "command": "dotnet",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/RealEstate.Test",
                "env": {
                    "VSTEST_HOST_DEBUG": "1"
                }
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
